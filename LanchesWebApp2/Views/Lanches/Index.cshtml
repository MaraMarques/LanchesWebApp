@model IEnumerable<LanchesWebApp2.Models.Lanche>

@{
    ViewData["Title"] = "Index";
}

<h1>Lanches</h1>

<p>
    <a asp-action="Create">Criar nova receita?</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                
                @*@Html.DisplayNameFor(model => model.Nome) *@
                @Html.DisplayName("Nome")
            </th>
            <th>

                @* @Html.DisplayNameFor(model => model.Descricao) *@
                @Html.DisplayName("Descrição")
            </th>
            <th>
                
                @*@Html.DisplayNameFor(model => model.Preco) *@
                @Html.DisplayName("Preço")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Preco)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LancheId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.LancheId">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.LancheId">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
